{
  "name": "Three.js WebXR Performance Monitor",
  "short_name": "WebXR Stats",
  "description": "Real-time performance monitoring tool for WebXR applications",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#00d4ff",
  "orientation": "any",
  "xr": {
    "required_features": ["local-floor"],
    "optional_features": ["bounded-floor", "hand-tracking", "layers"],
    "session_modes": ["immersive-vr"]
  },
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ]
}
